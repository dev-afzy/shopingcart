<script src="https://kit.fontawesome.com/a076d05399.js"></script>
{{#if product}}
   
<div class="row d-flex justify-content-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each product}}
            <li class="list-group-item">
                {{!-- <strong>{{this.}}</strong> --}}
                <span class="badge badge-success float-right">{{ this.qty }}</span>
                <img src="{{this.item.imgpath}}" alt="" class="cart border rounded mx-auto d-block float-left">
                
                <h3><strong class="ml-5 mt3">Name :{{ this.item.title }}</strong></h3>
                <div><strong class="ml-5 mt-2">Price :${{this.price}}</strong>
                </div>
                <a href="/add-one-cart/{{ this.item._id }}" type="button" class="btn btn-default btn-sm ml-5 mt-3 border">
                    Add <span class=" fas fa-plus" aria-hidden="true"></span> 
                </a> 
               <a href="/remove-one-cart/{{ this.item._id }}" type="button" class="btn btn-default btn-sm ml-5 mt-3 border">
                    Remove <span class=" fas fa-minus" aria-hidden="true"></span> 
                </a> 
                <a href="/removeall-one-cart/{{ this.item._id }}" type="button" class="btn btn-default btn-sm ml-5 mt-3 border">
                    Remove All <span class=" fas fa-minus" aria-hidden="true"></span> 
                </a> 
                
                
                
             </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row d-flex justify-content-center text-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total :${{ this.totalprice }}</strong>
    </div>
</div>
<hr>
<div class="row d-flex justify-content-center text-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/shop/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>

{{ else }}
<div class="row d-flex justify-content-center text-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>No items in the cart</strong>
    </div>
</div>
        
{{/if}}

 